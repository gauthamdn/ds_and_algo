package recursion;

import java.util.Arrays;

public class Palindrome {
	
	public static void main(String[] args) {
		
		
		
	}
	
	public boolean checkPalindrome(String str) {
		
		int i = 0;
		int j = str.length()-1;
		char[] strArray = str.toCharArray();
		
		while(i<j) {
			if(strArray[i]!=strArray[j])
				return false;
			else {
				i++;
				j--;
			}
		}
		
		return true;
	}

}
